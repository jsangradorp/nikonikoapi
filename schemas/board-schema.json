{
  "type": "object",
  "$schema": "http://json-schema.org/draft-03/schema",
  "$id": "schemas/board-schema.json",
  "required": true,
  "properties": {
    "boardId": {
      "type": "integer",
      "required": true
    },
    "label": {
      "type": "string",
      "required": true
    },
    "people": {
      "type": "array",
      "items": {
        "type": "schemas/person-schema.json"
      },
      "required": false
    },
    "reportedFeelings": {
      "type": "array",
      "items": {
          "$id": "schemas/feeling-schema.json"
      },
      "required": false
    }
  }
}
